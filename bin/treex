#! /bin/sh

# Prev update: Thu Jun 30 20:52:55 JST 2022
# Prev update: Thu Aug 18 12:34:36 JST 2022
# Last update: Thu Sep  1 08:38:16 JST 2022

tree -N -p $(pwd | sed 's/^.*\//..\//') "$@" 	| #
sed 's/^/     /' 				| # 各行の冒頭に空白を入れる
sed -e '1s/ \[d.........\] *//' 		| # 1行目を修正
sed -e '1s/\.\.\//.\//'				| # 1行目を修正
sed -e '2,$s/\[[^d].........\] //' 		\
      -e '2,$s/\[d.........\] \(.*\)$/\1\//'	| # 1行目以降を修正
awk '{printf "\n%s",$0}' 			| # 各行の行末処理
tail -n +2
echo " ($(LANG=C date))"
echo ""
